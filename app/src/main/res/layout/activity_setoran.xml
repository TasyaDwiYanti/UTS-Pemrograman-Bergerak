<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setoran"
    tools:context=".SetoranActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <include
        layout="@layout/toolbar" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewJudul"
        android:layout_marginTop="30dp"
        android:stretchColumns="*">

    <TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No."
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="8dp"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="8dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:text="Surah" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Keterangan"
          android:textStyle="bold"
          android:textColor="@color/black"
          android:padding="8dp"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Paraf Dosen"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:padding="8dp"/>
    </TableRow>
    <TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/black"
        android:padding="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="An-Naba"
        android:textColor="@color/black"
        android:padding="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kerja Praktek"
        android:textColor="@color/black"
        android:padding="8dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paraf"
        android:padding="8dp"/>
    </TableRow>

    <TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="@color/black"
        android:padding="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="An-Nazi'at"
        android:textColor="@color/black"
        android:padding="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kerja Praktek"
        android:textColor="@color/black"
        android:padding="8dp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Paraf"
          android:padding="8dp"/>
    </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/linearPersentase"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:layout_below="@id/tableLayout"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="16dp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Pendaftaran KP %"
          android:textColor="@color/black"
          android:textSize="18sp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:text="Seminar KP %"
          android:layout_gravity="center_vertical"
          android:textColor="@color/black"
          android:textSize="18sp" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:text="Pendaftaran Judul TA %"
          android:textColor="@color/black"
          android:textSize="18sp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:text="Seminar Proposal %"
          android:textColor="@color/black"
          android:textSize="18sp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:textColor="@color/black"
          android:text="Seminar Tugas Akhir %"
          android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginStart="16dp"
        android:text="Thn.Akademik 2023/2024"
        android:textSize="15sp"
        android:textColor="@android:color/black" />

  </LinearLayout>

  <RelativeLayout
      android:layout_width="300dp"
      android:layout_height="match_parent"
      android:background="@color/green"
      android:layout_gravity="start">

    <include
        layout="@layout/nav_drawer"/>

  </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
